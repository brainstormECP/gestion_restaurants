@model GestionRestaurants.Models.Reserva

@{
    ViewData["Title"] = "Nueva reserva";
}

<h2>Nueva reserva</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Nuevo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" type="date" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantId" class="control-label">Restaurant</label>
                <select asp-for="RestaurantId" class="form-control" asp-items="ViewBag.RestaurantId"></select>
                <span asp-validation-for="RestaurantId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraId" class="control-label">Horario</label>
                <select asp-for="HoraId" class="form-control" asp-items="ViewBag.HoraId"></select>
                <span asp-validation-for="HoraId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadDePersonas" class="control-label">Pax</label>
                <input asp-for="CantidadDePersonas" min="1" class="form-control" />
                <span asp-validation-for="CantidadDePersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Habitacion" class="control-label"></label>
                <input asp-for="Habitacion" class="form-control" />
                <span asp-validation-for="Habitacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a class="btn btn-default" asp-action="Index">Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
